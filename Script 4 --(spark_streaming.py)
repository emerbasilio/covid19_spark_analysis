from pyspark.sql import SparkSession
from pyspark.sql.functions import from_json, col
from pyspark.sql.types import StructType, StringType, IntegerType

spark = SparkSession.builder.appName("COVID19_Streaming").getOrCreate()

schema = StructType() \
    .add("departamento", StringType()) \
    .add("sexo", StringType()) \
    .add("edad", IntegerType())

stream_df = spark \
    .readStream \
    .format("kafka") \
    .option("kafka.bootstrap.servers", "localhost:9092") \
    .option("subscribe", "covid_topic") \
    .load()

valores = stream_df.selectExpr("CAST(value AS STRING)")
json_df = valores.select(from_json(col("value"), schema).alias("data")).select("data.*")

conteo = json_df.groupBy("departamento").count()

query = conteo.writeStream.outputMode("complete").format("console").start()
query.awaitTermination()
